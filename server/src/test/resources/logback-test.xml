<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d %level [%thread] %logger{50} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="WIRE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.apache.http.wire" level="debug" additivity="false">
        <appender-ref ref="WIRE"/>
    </logger>

    <logger name="com.acme.jackpotbets.db.sql" level="trace"/>
    <logger name="org.apache.http" level="info" />
    <logger name="io.netty" level="warn"/>
    <logger name="io.vertx" level="info"/>
    <logger name="com.jayway.jsonpath" level="info"/>
    <logger name="io.restassured" level="info"/>

    <!-- spam -->
    <logger name="liquibase" level="warn"/>
    <logger name="liquibase.changelog" level="info"/>
    <logger name="org.hibernate.validator.internal.util.Version" level="off"/>
    <logger name="org.jooq.Constants" level="off"/>

    <root level="debug">
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>
